<div class="slidecontainer">
  <input type="range" min="1" max="24" value="12" step="1" class="slider" id="myRange">
  <p>Average Maximum Temperature: <span id="demo"></span></p>
</div>

<script>
var slider = document.getElementById("myRange");
var output;

slider.oninput = function() {
  if (slider = 1) {
  output = "January";
  } else if (slider = 3) {
    output = "March";
  } else {
    output ="Month here";
  }
output.innerHTML = output;
}

